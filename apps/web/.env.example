# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Public base URL (used in JSON-LD / structured data)
NEXT_PUBLIC_SITE_URL=https://darwinhub.org

# Supabase Admin (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Closed Beta (invite-only signup)
# Used to HMAC-hash invite codes stored in `beta_invites.code_hash`
BETA_INVITE_SECRET=change-me-long-random
# Required header for POST /api/beta/invites (x-beta-admin-key)
BETA_ADMIN_API_KEY=change-me

# AI Provider (optional)
# Recommended: Grok (xAI, OpenAI-compatible)
XAI_API_KEY=xai_your_api_key_here
# Alias supported by the shared client
GROK_API_KEY=xai_your_api_key_here

# Minimax AI API (optional, native API)
MINIMAX_API_KEY=minimax_your_api_key_here
MINIMAX_GROUP_ID=your_group_id_here
MINIMAX_MODEL=abab6.5-chat
MINIMAX_API_URL=https://api.minimax.chat/v1
MINIMAX_API_STYLE=minimax
MINIMAX_COST_PER_1K_TOKENS_BRL=0.002

# AI Cache Configuration (TTL in days)
AI_CACHE_TTL_EXPLAIN_DAYS=7
AI_CACHE_TTL_GENERATE_QUESTION_DAYS=90
AI_CACHE_TTL_CASE_STUDY_DAYS=30
AI_CACHE_TTL_SUMMARY_DAYS=30

# UX Flags
# Keep false for beta to avoid blocking first-visit hero with modal onboarding.
NEXT_PUBLIC_ENABLE_ONBOARDING=false
