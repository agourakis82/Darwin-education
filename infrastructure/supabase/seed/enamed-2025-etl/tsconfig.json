{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@darwin-education/shared": ["../../../packages/shared/src"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "outputs"]
}
